{% extends '@OctopouceAdmin/layout.html.twig' %}

{% form_theme form '@OctopouceAdmin/Form/layout.html.twig' %}

{% block main %}
    <div class="padding-filter ">
        <div class="row title">
            <div class="col s12">
                <h1>{{ category }} option</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col s4">
                {{ form_widget(form.options) }}
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                {{ form_widget(form.submit) }}

                {% if category == 'mail' %}
                    {{ form_widget(form.submit_send) }}
                {% endif %}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
