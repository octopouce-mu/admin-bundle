{% extends '@OctopouceAdmin/layout.html.twig' %}

{% form_theme form '@OctopouceAdmin/Form/layout.html.twig' %}

{% block main %}
    <div class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>{{ user.username }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="box">
                    <div class="content">
                        {{ form_start(form) }}
                            <div class="row">
                                <ul class="tabs transparent">
                                    <li class="tab col s3"><a class="active" href="#general">General</a></li>
                                </ul>
                            </div>
                            <div id="general">
                                {% include '@OctopouceAdmin/User/edit/general.html.twig' %}
                            </div>
                            <div class="row">
                                {{ form_widget(form.submit) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}