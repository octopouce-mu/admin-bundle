{% extends '@OctopouceAdmin/layout.html.twig' %}

{% block main %}
    <div class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>Users</h1>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="box">
                    <div class="content">
                        {% if users %}
                            <table>
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Firstname</th>
                                        <th>Lastname</th>
                                        <th>Username</th>
                                        <th>E-Mail</th>
                                        <th>Roles</th>
                                        <th>Enabled</th>
                                        <th>Created At</th>
                                        <th width="300">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>{{ user.firstname }}</td>
                                            <td>{{ user.lastname }}</td>
                                            <td>{{ user.username }}</td>
                                            <td>{{ user.email }}</td>
                                            <td>
                                                {% for role in user.roles %}
                                                    <span class="chip blue">{{ role }}</span>
                                                {% endfor %}
                                            </td>
                                            <td>{{ user.enabled }}</td>
                                            <td>{{ user.createdAt|date('d/m/Y') }}</td>
                                            <td class="center-align">
                                                <a href="{{ path('octopouce_admin_user_show', {'id': user.id}) }}" class="waves-effect waves-light btn blue"><i class="fas fa-eye"></i></a>
                                                <a href="{{ path('octopouce_admin_user_edit', {'id': user.id}) }}" class="waves-effect waves-light btn orange"><i class="fas fa-pencil-alt"></i></a>
                                                <a href="{{ path('octopouce_admin_user_delete', {'id': user.id}) }}" class="waves-effect waves-light btn red"><i class="fas fa-times"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            Pas de contenu.
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
